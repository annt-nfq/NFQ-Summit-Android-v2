<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NFQSummit" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>
    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" >false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.MySplash">
        <item name="windowSplashScreenBackground" tools:targetApi="s">@color/nfq_orange</item>
        <item name="windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.NFQSummit</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="tiramisu">icon_preferred</item>
    </style>
</resources>