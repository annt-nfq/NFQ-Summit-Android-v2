<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NFQSummit" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/nfq_orange</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.NFQSummit</item>
    </style>
</resources>